@model PassBook.Models.Transaction

@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card my-5">
                <div class="card-header bg-white text-center p-3">
                    <h3 class="text-dark">
                        Details Account
                    </h3>
                </div>
                 <div class="card-body">
                                    <div class="form-group row mb-0">
                                        <div class="col-md-12">
                            <a asp-action="Rapport" asp-route-id="@Model?.TransactionId"
                                              class="btn btn-outline-danger">
                                transaction Rapport
                                            </a>
                                      </div>
                                    </div>
                                    <hr>
                                  <div class="form-group mb-3">
                        <label for="Account Number" class="form-label fw-bold">Account Number</label>
                                        <div class="border border-secondary rounded p-2">
                            @Html.DisplayFor(model => model.AccountNumber)
                                        </div>
                                    </div>
                                  <div class="form-group mb-3">
                        <label for="Benificiary Name" class="form-label fw-bold">Benificiary Name</label>
                                        <div class="border border-secondary rounded p-2">
                            @Html.DisplayFor(model => model.BenificiaryName)
                                        </div>
                                    </div>
                                  <div class="form-group mb-3">
                        <label for="BankName" class="form-label fw-bold">BankName</label>
                                        <div class="border border-secondary rounded p-2">
                            @Html.DisplayFor(model => model.BankName)
                                        </div>
                                    </div>
                                  <div class="form-group mb-3">
                        <label for="SWIFT Code" class="form-label fw-bold">SWIFT Code</label>
                                        <div class="border border-secondary rounded p-2">
                            @Html.DisplayFor(model => model.SWIFTCode)
                                        </div>
                                    </div>
                                  <div class="form-group mb-3">
                        <label for="Amount" class="form-label fw-bold">Amount</label>
                                        <div class="border border-secondary rounded p-2">
                            @Html.DisplayFor(model => model.Amount)
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                        <label for="Date" class="form-label fw-bold">Date</label>
                                        <div class="border border-secondary rounded p-2">
                            @Html.DisplayFor(model => model.Date)
                                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>

