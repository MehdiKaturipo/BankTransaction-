@model PassBook.Models.Transaction

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card my-5">
                <div class="card-header bg-white text-center p-3">
                    <h3 class="text-dark">
                        Transaction Rapport
                    </h3>
                </div>
                <div class="card-body">
                    <br />
                    <br />
                    <p class="lead">
                        Mr.   <b>  __@Html.DisplayFor(model => model.BenificiaryName) ___</b> who has bank account number :
                        <b> @Html.DisplayFor(model => model.AccountNumber) </b>
                    </p>
                    <p class="lead">
                        and who owns an account in bank <b> ___@Html.DisplayFor(model => model.BankName)___</b>
                    </p>
                    <p class="lead">
                        has transferred dh balance <b>___@Html.DisplayFor(model => model.Amount)___ DH</b>
                    </p>
                    <p class="lead">
                        on date <b>___@Html.DisplayFor(model => model.Date)___</b>
                    </p>

                    <p class="m-3">
                        <b>Signature :___________</b>
                    </p>
                    <a href="#" id="printPageButton" class="btn  btn-primary mb-3" onclick="document.getElementById('printPageButton').style.display = 'none';window.print();" class="btn btn-md btn-primary mr-2 mb-2">
                        <i class="fas fa-print"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
